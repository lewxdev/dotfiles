	name = J. Lewis
	email = inquiries.lewis+dev@gmail.com
[core]
	excludesfile = ~/.gitignore_global
[alias] # https://git-scm.com/book/en/v2/Git-Basics-Git-Aliases
	get-origin = remote get-url origin

# Git URLs
# HTTPS (User)
[url "https://github.com/lewxdev/"]
	insteadOf = gh/@/
	insteadOf = github/lewxdev/
[url "https://gitlab.com/lewxdev/"]
	insteadOf = gl/@/
	insteadOf = gitlab/lewxdev/
# SSH (User)
[url "git@github.com:lewxdev/"]
	insteadOf = gh/@:
	insteadOf = github/lewxdev:
[url "git@gitlab.com:lewxdev"]
	insteadOf = gl/@:
	insteadOf = gitlab/lewxdev:

# HTTPS
[url "https://gist.github.com/"]
	insteadOf = gist/
[url "https://github.com/"]
	insteadOf = gh/
	insteadOf = github/
[url "https://gitlab.com/"]
	insteadOf = gl/
	insteadOf = gitlab/
# SSH
[url "git@gist.github.com:"]
	insteadOf = gist:
[url "git@github.com:"]
	insteadOf = gh:
	insteadOf = github:
[url "git@gitlab.com:"]
	insteadOf = gl:
